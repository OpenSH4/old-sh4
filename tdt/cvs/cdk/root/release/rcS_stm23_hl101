          /var/config/system/start_script.sh &
    if [ -e /var/keys/Benutzerdaten/.system/overclock ]; then
       if [ "$OVERCLOCK" = "300on" ]; then
           echo 15110 > /proc/cpu_frequ/pll0_ndiv_mdiv
       elif [ "$OVERCLOCK" = "333on" ]; then
           echo 15110 > /proc/cpu_frequ/pll0_ndiv_mdiv
       elif [ "$OVERCLOCK" = "366on" ]; then

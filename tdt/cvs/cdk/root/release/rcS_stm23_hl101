          killall -9 evremote2
       fi
       alt="/tmp/fbalt"
       if [ -e $alt ]; then
          check="/ram/autoswitch.tmp"
          if [ -e /ram/lircd.pid ]; then
             rm /ram/lircd.pid
          fi
          echo "vip1" > /var/config/boxtype
